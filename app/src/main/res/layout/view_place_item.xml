<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_app_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_small_default"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dimen_min_default">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_small_default">

            <ImageView
                android:id="@+id/image_place"
                android:layout_width="@dimen/dimen_place_image_size"
                android:layout_height="@dimen/dimen_place_image_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/text_place_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image_place"
                android:layout_toRightOf="@+id/image_place"
                android:paddingLeft="@dimen/dimen_default"
                android:textSize="@dimen/title_font_size"
                android:layout_marginBottom="@dimen/dimen_small_default"/>

            <TextView
                android:id="@+id/text_place_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_place_name"
                android:layout_alignStart="@+id/text_place_name"
                android:layout_below="@+id/text_place_name"
                android:paddingLeft="@dimen/dimen_default"
                android:textSize="@dimen/default_font_size"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>