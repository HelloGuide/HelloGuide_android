<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_board_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_min_default"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dimen_default">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dimen_small_default">

            <TextView
                android:id="@+id/text_board_title"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="@dimen/dimen_default"
                android:textSize="@dimen/large_font_size"
                />

            <TextView
                android:id="@+id/text_board_content"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dimen_default"
                android:textSize="@dimen/default_font_size"
                android:layout_below="@+id/text_board_title"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_width"
                android:id="@+id/imageView32"
                android:src="@android:color/darker_gray"
                android:layout_below="@+id/text_board_content"
                android:layout_marginTop="@dimen/dimen_small_default"
                android:layout_marginBottom="@dimen/dimen_small_default"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_board_author"
                android:layout_below="@+id/imageView32"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_board_date"
                android:layout_below="@+id/imageView32"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>