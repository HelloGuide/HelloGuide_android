<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.androidchoi.helloguide.PlaceContentFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_default">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/image_place_default"
            android:id="@+id/image_place"
            android:layout_marginBottom="@dimen/dimen_default"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_font_size"
            android:shadowColor="@android:color/black"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:id="@+id/text_place_name"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/image_place"
            android:layout_alignRight="@+id/image_place"
            android:layout_alignEnd="@+id/image_place"
            android:layout_margin="@dimen/dimen_small_default"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text_place_content"
            android:layout_below="@+id/image_place"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_font_size"/>
    </RelativeLayout>

</ScrollView>
